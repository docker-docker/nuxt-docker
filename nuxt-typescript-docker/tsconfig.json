{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "server/src/types/*"
      ],
      "~/*": [
        "./client/*"
      ],
      "@/*": [
        "./client/*"
      ]
    },
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "types": [
      "@types/node",
      "@nuxt/types"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "server/src/**/*",
    "server/test/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "node_modules"
  ]
}
